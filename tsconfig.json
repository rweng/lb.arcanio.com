{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*"
    ]
}
